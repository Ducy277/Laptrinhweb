@{
  ViewData["Title"] = "SignUp";
}
@model shopflowerproject.Models.AccountRegister
<section class="vh-100 bg-image" <div class="mask d-flex align-items-center h-100 gradient-custom-3">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-9 col-lg-7 col-xl-6">
        <div class="card" style="border-radius: 15px;">
          <div class="card-body p-5">
            <h2 class="text-uppercase text-center mb-5">Create an account</h2>
            <form method="post" action="SignUp">
              <div data-mdb-input-init class="form-outline mb-4">
                <input type="text" asp-for="FullName" id="fullName" class="form-control form-control-lg"
                  placeholder="Full Name" required />
                <span asp-validation-for="FullName" class="text-danger"></span>
              </div>

              <div data-mdb-input-init class="form-outline mb-4">
                <input type="text" id="username" asp-for="Username" class="form-control form-control-lg"
                  placeholder="Username" required />
                <span asp-validation-for="Username" class="text-danger"></span>
              </div>
              <div data-mdb-input-init class="form-outline mb-4">
                <input type="Email" id="Email" asp-for="Email" class="form-control form-control-lg"
                  placeholder="Email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
              </div>

              <div data-mdb-input-init class="form-outline mb-4">
                <input type="password" id="password" asp-for="Password" class="form-control form-control-lg"
                  placeholder="Password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
              </div>

              <div data-mdb-input-init class="form-outline mb-4">
                <input type="password" id="confirmPassword" asp-for="ConfirmPassword"
                  class="form-control form-control-lg" placeholder="Confirm Password" required />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
              </div>

              <div class="d-flex justify-content-center">
                <button type="submit" data-mdb-button-init data-mdb-ripple-init
                  class="btn btn-outline-primary">Register</button>
              </div>

              <p class="text-center text-muted mt-5 mb-0">
                Have already an account?
                <a asp-controller="Account" asp-action="Login" class="fw-bold text-body"><u>Login here</u></a>
              </p>
            </form>

          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
</section>